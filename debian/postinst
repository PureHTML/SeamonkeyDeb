#!/bin/sh -e

#DEBHELPER#

if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] ; then
    update-alternatives --install /usr/bin/x-www-browser \
        x-www-browser /opt/seamonkey/seamonkey 70 \
        --slave /usr/share/man/man1/x-www-browser.1.gz \
        x-www-browser.1.gz /usr/share/man/man1/seamonkey.1.gz
    update-alternatives --remove mozilla /opt/seamonkey/seamonkey
    update-alternatives --install /usr/bin/gnome-www-browser \
        gnome-www-browser /opt/seamonkey/seamonkey 70 \
        --slave /usr/share/man/man1/gnome-www-browser.1.gz \
        gnome-www-browser.1.gz /usr/share/man/man1/seamonkey.1.gz
fi

if [ -f /usr/bin/xdg-desktop-menu ]; then
    xdg-desktop-menu install --novendor /usr/share/applications/seamonkey.desktop > /dev/null || true
fi

if [ "$1" = "configure" ] ; then
    chmod g+rwX /opt/seamonkey -R
    chgrp users /opt/seamonkey -R
fi
